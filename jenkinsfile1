pipeline{
    agent any
    stages{
        stage("SCM Checkout"){
            steps{
                git "https://github.com/sivajavatechie/JenkinsWar"
            }
        }
        stage("MAVEN BUILD"){
           steps{
                sh "mvn clean package"
           }            
        }
        stage('code analysis'){
            steps{
                def mavenhome = tool name:'maven3', type:'hudson.plugins.sonar.SonarRunnerInstallation'
                with SonarQubeEnv ('SonarQube') {
                    sh """${mavenhome}/bin/mvn sonar:sonar"""
                }  
           }
        }
    }
}
