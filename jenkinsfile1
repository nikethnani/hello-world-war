pipeline{
    agent any
    stages{
        stage("SCM Checkout"){
            steps{
                git "https://github.com/sivajavatechie/JenkinsWar"
            }
        }
        stage("MAVEN BUILD"){
           steps{
                sh "mvn clean package"
           }            
        }
        stage('code analysis'){
            steps{
                def scannerhome = tool 'tool name: 'sonar';
                with SonarQubeEnv ('SonarQube')
                sh """${scannerhome}/bin/sonar-runner -D sonar.login = admin -D sonar.password = Welcome01"""
            }
        }
    }
}
