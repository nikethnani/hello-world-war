pipeline{
    agent any
    stages{
        stage("SCM Checkout"){
            steps{
                git 'https://github.com/sivajavatechie/JenkinsWar'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                
            }
        }
        stage("Email Notification"){
            steps{
                mail bcc: '', body: '''Hi,

                How are you

                Regards
                Madhu''', cc: '', from: '', replyTo: '', subject: 'Jenkins Job', to: 'nikethnani@gmail.com'
                
            }
        }
    }
}
