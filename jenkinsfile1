pipeline{
    agent any
    stages{
        stage("SCM Checkout"){
            steps{
                git "https://github.com/sivajavatechie/JenkinsWar"
            }
        }
        stage("MAVEN BUILD"){
           steps{
                sh "mvn clean package"
           }            
        }
        stage('code analysis'){
            steps{
                def scannerhome = tool name:'sonar';
                with SonarQubeEnv ('SonarQube') {
                    sh """${scannerhome}/opt/sonar -D sonar.login=admin -D sonar.password=welcome01"""
                }  
           }
        }
    }
}
